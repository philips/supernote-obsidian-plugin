{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "supernote-typescript": ["../supernote-typescript/src/"]
    },
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "DOM.Iterable"
    ]
  },
  "exclude": [
    "supernote-typescript/tests/*.ts"
  ]
}
